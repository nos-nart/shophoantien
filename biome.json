{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"style": {
				"all": true,
				"noDefaultExport": "off",
				"useNamingConvention": "off"
			},
			"correctness": {
				"all": true,
				"noGlobalObjectCalls": "off",
				"noUndeclaredVariables": "off"
			},
			"a11y": { "all": true, "noSvgWithoutTitle": "off" }
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"bracketSpacing": true,
			"quoteStyle": "single",
			"semicolons": "always",
			"jsxQuoteStyle": "single",
			"trailingComma": "none",
			"bracketSameLine": true,
			"arrowParentheses": "always"
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"organizeImports": { "enabled": true },
	"json": { "parser": { "allowComments": true } },
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	}
}
